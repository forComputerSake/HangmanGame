// Definitions of Functions Contained in Functions.h file

void WinningMessage()
{
	gotoxy(39, 2);
	cout << " |--------------------------------|" << endl;
	gotoxy(40, 3);
	cout << "|         Congratulations!       |" << endl;
	gotoxy(40, 4);
	cout << "|     You Saved an Innocent Man. |" << endl;
	gotoxy(40, 5);
	cout << "|             My Hero!           |" << endl;
	gotoxy(39, 6);
	cout << " |--------------------------------|" << endl;

}

void LosingMessage()
{
	gotoxy(39, 2);
	cout << " |------------------------------------|" << endl;
	gotoxy(40, 3);
	cout << "|                Oh No!              |" << endl;
	gotoxy(40, 4);
	cout << "|     You Killed an Innocent Man.    |" << endl;
	gotoxy(40, 5);
	cout << "|             Why God Why!           |" << endl;
	gotoxy(39, 6);
	cout << " |------------------------------------|" << endl;

}

void StartMessage()
{
	gotoxy(37, 2);
	cout << " |---------------------------------------|" << endl;
	gotoxy(37, 3);
	cout << " | Welcome to the game of Innocent Man!  |" << endl;
	gotoxy(37, 4);
	cout << " |---------------------------------------|" << endl;
	gotoxy(47, 7);
	cout << "--------------------" << endl;
	gotoxy(47, 8);
	cout << "|                  |" << endl;
	gotoxy(47, 9);
	cout << "|                  |" << endl;
	gotoxy(47, 10);
	cout << "|" << endl;
	gotoxy(47, 11);
	cout << "|" << endl;
	gotoxy(47, 12);
	cout << "|" << endl;
	gotoxy(47, 13);
	cout << "|" << endl;
	gotoxy(47, 14);
	cout << "-----------------------" << endl;
	gotoxy(66, 9);
	cout << "0" << endl;
	gotoxy(65, 10);
	cout << char(47) << "|" << char(92) << endl;
	gotoxy(66, 11);
	cout << char(47) << char(92) << endl;
	gotoxy(45, 16);
	cout << "Which would you like to do?" << endl;
	gotoxy(52, 17);
	cout << "1. Play Game." << endl;
	gotoxy(52, 18);
	cout << "2. Quit." << endl;
	gotoxy(45, 19);
	cout << "Please enter either 1 or 2: " << endl;

}

void Rules()
{
	gotoxy(45, 12);
	cout << "0" << endl;
	gotoxy(44, 13);
	cout << char(47) << "|" << char(92) << endl;
	gotoxy(45, 14);
	cout << char(47) << char(92) << endl;
	gotoxy(53, 13);
	cout << "OR" << endl;
	gotoxy(61, 12);
	cout << "0" << endl;
	gotoxy(60, 13);
	cout << char(47) << "|" << char(92) << endl;
	gotoxy(61, 14);
	cout << char(47) << char(92) << endl;
	gotoxy(71, 12);
	cout << "0" << endl;
	gotoxy(70, 13);
	cout << char(47) << "|" << char(92) << endl;
	gotoxy(71, 14);
	cout << char(47) << char(92) << endl;
	gotoxy(20, 22);
	cout << "Single Player Mode:" << endl;
	gotoxy(22, 23);
	cout << "In this mode, the player will have 5 tries to guess the correct answer" << endl;
	gotoxy(20,24);
	cout << "Two Player Mode:" << endl;
	gotoxy(22, 25);
	cout << "In this mode, Both players will have 3 tries to guess the correct answer " << endl;

}

void playerQ()
{
	gotoxy(45, 16);
	cout << "How Many Players?" << endl;
	gotoxy(52, 17);
	cout << "1. One" << endl;
	gotoxy(52, 18);
	cout << "2. Two" << endl;
	gotoxy(45, 19);
}

void WordMessage()
{
	gotoxy(33, 2);
	cout << " |-----------------------------------------------|" << endl;
	gotoxy(33, 3);
	cout << " |   Get Ready for the Game of Someone's Life    |" << endl;
	gotoxy(34, 4);
	cout << "|            A word has been chosen!            |" << endl;
	gotoxy(34, 5);
	cout << "|             Now it is your turn.              |" << endl;
	gotoxy(34, 6);
	cout << "|               Guess Carefully.                |" << endl;
	gotoxy(33, 7);
	cout << " |-----------------------------------------------|" << endl;

}

void gotoxy(int column, int line)
{
	COORD coord;
	coord.X = column;
	coord.Y = line;
	SetConsoleCursorPosition(
		GetStdHandle(STD_OUTPUT_HANDLE),
		coord
	);
}

