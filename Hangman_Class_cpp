// Definitions For the Wordbank and Choosen Words
void theHM::loadWords()
{
	int counter = 0;
	ifstream wrdBnk;
	wrdBnk.open("wordbank.txt");
	if (!wrdBnk)
	{
		cout << "Error Finding Input file." << endl;
		system("pause");
		exit;

	}
	while (!wrdBnk.eof())
	{
		wrdBnk >> wordbnk[counter];
		counter++;
	}
	wrdBnk.close();
}
//Choose Hidden Word
void theHM::hiddenWord()
{
	srand(time(NULL));
	int randNum = rand() % 10 + 1;
	HiddenWord = wordbnk[randNum];
}
//Show Wordbank
void theHM::showBank()
{
	gotoxy(52, 18);
	cout << "Word Bank:" << endl;
	gotoxy(15, 19);
	cout << "|-----------------------------------------------------------------------------------------|" << endl;
	gotoxy(15, 20);
	for (int i = 0; i < 10; i++)
	{
		cout << " " << wordbnk[i] << "  ";
	}
	cout << endl;
	gotoxy(15, 21);
	cout << "|-----------------------------------------------------------------------------------------|" << endl;

}
